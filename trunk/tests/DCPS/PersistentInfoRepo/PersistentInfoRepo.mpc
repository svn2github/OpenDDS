project(*Publisher) : dcpsexe_with_tcp, dcps_shmem,  {
  exename   = publisher
  exeout    = .

  libpaths += ../../Utils
  libs     += TestUtils
  after    += TestUtils
  libpaths += ../FooType4
  libs     += DcpsFooType4
  after    += DcpsFooType4

  Source_Files {
    Publisher.cpp
  }
}

project(*Subscriber) : dcpsexe_with_tcp, dcps_shmem,  {
  exename   = subscriber
  exeout    = .

  libpaths += ../../Utils
  libs     += TestUtils
  after    += TestUtils
  libpaths += ../FooType4
  libs     += DcpsFooType4
  after    += DcpsFooType4

  Source_Files {
    Subscriber.cpp
    Listener.cpp
  }
}

