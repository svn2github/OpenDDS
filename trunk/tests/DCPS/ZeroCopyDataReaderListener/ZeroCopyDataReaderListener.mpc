project(DDS*idl): dcps_test_lib {
  idlflags      += -Wb,stub_export_include=Messenger_export.h \
                   -Wb,stub_export_macro=Messenger_Export
  dcps_ts_flags += -Wb,export_macro=Messenger_Export
  dynamicflags  += MESSENGER_BUILD_DLL

  TypeSupport_Files {
    Messenger.idl
  }
}

project(DDS*Publisher): dcpsexe_with_tcp, dcps_udp, dcps_multicast, dcps_rtps_udp, dcps_shmem, dds_model {

  exename   = publisher
  after    += DDS*idl
  libs     += DDS*idl

  Idl_Files {
  }

  Source_Files {
    publisher.cpp
    Writer.cpp
  }
}

project(DDS*Subscriber): dcpsexe_with_tcp, dcps_udp, dcps_multicast, dcps_rtps_udp, dcps_shmem, dds_model {

  exename   = subscriber
  after    += DDS*idl
  libs     += DDS*idl

  Idl_Files {
  }

  Source_Files {
    subscriber.cpp
    DataReaderListener.cpp
  }
}

project(DDS*StackSubscriber) : dcpsexe_with_tcp, dcps_udp, dcps_multicast, dcps_rtps_udp, dds_model {

  exename   = stack_subscriber
  after    += DDS*idl
  libs     += DDS*idl

  Idl_Files {
  }

  Source_Files {
    stack_subscriber.cpp
    DataReaderListener.cpp
  }
}
