project(*idl): dcps {
  

  TypeSupport_Files {
    DDSPerfTest.idl >> PubMessageTypeSupport.idl \
                       PubMessageTypeSupportImpl.h \
                       PubMessageTypeSupportImpl.cpp \
                       AckMessageTypeSupport.idl \
                       AckMessageTypeSupportImpl.h \
                       AckMessageTypeSupportImpl.cpp 

  }

  IDL_Files {
    DDSPerfTest.idl
    PubMessageTypeSupport.idl
    AckMessageTypeSupport.idl
  }

  custom_only = 1
}

project(DDS*Pub): dcpsexe {
  after += *idl
  
  exename = dds_pub

  IDL_Files {
    DDSPerfTest.idl
    PubMessageTypeSupport.idl
    AckMessageTypeSupport.idl
  }

  Source_Files {
    sample_pub.cpp
    PubListener.cpp
    PubMessageTypeSupportImpl.cpp
    AckMessageTypeSupportImpl.cpp
  }
}


project(DDS*Sub): dcpsexe {
  after += *idl
  
  exename = dds_sub

  IDL_Files {
    DDSPerfTest.idl
    PubMessageTypeSupport.idl
    AckMessageTypeSupport.idl
  }

  Source_Files {
    sample_sub.cpp
    SubListener.cpp
    PubMessageTypeSupportImpl.cpp
    AckMessageTypeSupportImpl.cpp
  }
}

