project(*idl) : taoidldefaults, dcps_ts_defaults {
  idlflags += -I../Sync -I$(DDS_ROOT)
  after    += Sync_Idl

  TypeSupport_Files {
    Messenger.idl
  }

  custom_only = 1
}


project(*SyncServer) : taoexe, portableserver, iortable, coverage_optional {
  exename   = syncServer
  includes += ../Sync
  libs     += SyncServer
  libpaths += $(DDS_ROOT)/lib
  after    += *idl Sync_ServerLib
  avoids   += minimum_corba
  idlflags += -I../Sync

  IDL_Files {
    SyncExt.idl
  }

  Source_Files {
    SyncServer.cpp
    SyncExt_i.cpp
  }
}

project(*Publisher) : dcpsexe_with_tcp {
  exename   = publisher
  libs     += SyncClient
  includes += ../Sync
  after    += *SyncServer Sync_ClientLib
  idlflags += -I../Sync

  TypeSupport_Files {
    Messenger.idl
  }

  Source_Files {
    SyncClientExt_i.cpp
    publisher.cpp
    Writer.cpp
  }
}

project(*Subscriber) : dcpsexe_with_tcp {
  exename   = subscriber
  libs     += SyncClient
  includes += ../Sync
  after    += *Publisher Sync_ClientLib
  idlflags += -I../Sync

  TypeSupport_Files {
    Messenger.idl
  }

  Source_Files {
    SyncClientExt_i.cpp
    subscriber.cpp
    DataReaderListener.cpp
  }
}
