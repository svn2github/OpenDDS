project(DDS*idl): dcps {
  // This project ensures the common components get built first.

  TypeSupport_Files {
    Messenger.idl
  }

  custom_only = 1
}


project(DDS*Publisher) : dcpsexe_with_tcp {
  exename = publisher
  after  += DDS*idl

  TypeSupport_Files {
    Messenger.idl
  }

  Source_Files {
    publisher.cpp
    Writer.cpp
  }
}

project(DDS*Subscriber) : dcpsexe_with_tcp {
  exename = subscriber
  after  += DDS*idl

  TypeSupport_Files {
    Messenger.idl
  }

  Source_Files {
    subscriber.cpp
    DataReaderListener.cpp
  }
}


project(DDS*Monitor) : dcpsexe_with_tcp {
  exename   = monitor
  requires += built_in_topics
  after  += DDS*idl

  Source_Files {
    monitor.cpp
  }
}
