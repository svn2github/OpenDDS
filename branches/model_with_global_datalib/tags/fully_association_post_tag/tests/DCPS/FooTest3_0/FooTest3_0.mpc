project(*Publisher): dcpsexe, portableserver {
  exename = FooTest3_publisher
  after       += DcpsFooType3
  libs     +=  DcpsFooType3
  libpaths +=  ../FooType3

  IDL_Files {
    Test.idl
  }

  Source_Files {
    pub_main.cpp
    PubDriver.cpp
    DataWriterListener.cpp
    DomainParticipantListener.cpp
    PublisherListener.cpp
    TestS.cpp
    TestC.cpp
  }
}

project(*Subscriber): dcpsexe, portableserver {
  exename = FooTest3_subscriber
  after       += DcpsFooType3
  libs     += DcpsFooType3
  libpaths +=  ../FooType3

  IDL_Files {
    Test.idl
  }

  Source_Files {
    sub_main.cpp
    SubDriver.cpp
    SimpleDataReader.cpp
    SimpleSubscriber.cpp
    TestC.cpp
  }
}
