
project(*idl): dcps {
  // This project ensures the common components get built first.

  TypeSupport_Files {
    Messenger.idl
  }

  custom_only = 1
}


project(*Publisher) : dcpsexe_with_tcp {
  exename = publisher
  after  += *idl

  TypeSupport_Files {
    Messenger.idl
  }

  Source_Files {
    publisher.cpp
    Writer.cpp
  }
}

project(*Subscriber) : dcpsexe_with_tcp {
  exename = subscriber
  after  += *idl

  TypeSupport_Files {
    Messenger.idl
  }

  Source_Files {
    subscriber.cpp
    DataReaderListener.cpp
  }
}

