project(ZeroCopyDRL_idl): dcps_test_lib {
  idlflags      += -Wb,stub_export_include=Messenger_export.h \
                   -Wb,stub_export_macro=Messenger_Export
  dcps_ts_flags += -Wb,export_macro=Messenger_Export
  dynamicflags  += MESSENGER_BUILD_DLL

  TypeSupport_Files {
    Messenger.idl
  }
}

project(ZeroCopyDRL_Publisher): dcpsexe, dcps_tcp, dcps_udp, dcps_multicast, dcps_rtps_udp, dcps_shmem, dds_model {

  exename   = publisher
  after    += ZeroCopyDRL_idl
  libs     += ZeroCopyDRL_idl

  Idl_Files {
  }

  Source_Files {
    publisher.cpp
    Writer.cpp
  }
}

project(ZeroCopyDRL_Subscriber): dcpsexe, dcps_tcp, dcps_udp, dcps_multicast, dcps_rtps_udp, dcps_shmem, dds_model {

  exename   = subscriber
  after    += ZeroCopyDRL_idl
  libs     += ZeroCopyDRL_idl

  Idl_Files {
  }

  Source_Files {
    subscriber.cpp
    DataReaderListener.cpp
  }
}

project(ZeroCopyDRL_StackSubscriber) : dcpsexe, dcps_tcp, dcps_udp, dcps_multicast, dcps_rtps_udp, dds_model {

